{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "maple",
  "name": "Pkg.lat Docs",
  "colors": {
    "primary": "#ff0000",
    "light": "#ff0000",
    "dark": "#ff3131"
  },
  "favicon": "/images/AdobeExpress-file.png",
  "navigation": {
    "global": {
      "anchors": [
        {
          "anchor": "Panel",
          "icon": "house",
          "href": "https://torch.pkg.lat"
        },
        {
          "anchor": "Metrics",
          "icon": "computer-mouse",
          "href": "https://metric.pkg.lat"
        }
      ]
    },
    "tabs": [
      {
        "tab": "Home",
        "icon": "warehouse",
        "groups": [
          {
            "group": "Getting started",
            "pages": [
              "index"
            ]
          },
          {
            "group": "Local Development",
            "icon": "rectangle-terminal",
            "pages": [
              "development"
            ]
          },
          {
            "group": "Human datascript",
            "icon": "subscript",
            "pages": [
              "essentials/markdown"
            ]
          }
        ]
      },
      {
        "tab": "Lightd API",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "lightd/introduction",
              "lightd/authentication",
              "lightd/quick-start"
            ]
          },
          {
            "group": "API Reference",
            "pages": [
              "lightd/volumes",
              "lightd/volume-quotas",
              "lightd/network",
              "lightd/containers",
              "lightd/container-updates",
              "lightd/websocket",
              "lightd/remote"
            ]
          },
          {
            "group": "Examples",
            "pages": [
              "lightd/response-examples"
            ]
          }
        ]
      }
    ]
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:hello@pkg.lat"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://dashboard.mintlify.com"
    }
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity",
     "mcp",
     "cursor",
     "vscode"
   ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/mintlify",
      "github": "https://github.com/mintlify",
      "linkedin": "https://linkedin.com/company/mintlify"
    }
  },
  "description": "Discover our products and find clear guides for installing and using our open-source software.",
  "background": {
    "decoration": "windows"
  },
  "appearance": {
    "strict": false,
    "default": "system"
  },
    "fonts": {
      "heading": {
        "family": "Seven Segment",
        "source": "https://fonts.cdnfonts.com/s/71640/Seven%20Segment.woff",
        "format": "woff",
        "weight": 400
      },
      "body": {
        "family": "Space Mono",
        "weight": 400
      }
    }
}
